<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/common_title_layout"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStepOne"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_registe_setup_one"
            android:gravity="center"
            android:text="1"
            android:textColor="@drawable/selector_registe_setup_one_text_color"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/deepblue"/>

        <TextView
            android:id="@+id/tvStepTwo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_registe_setup_two"
            android:gravity="center"
            android:text="2"
            android:textColor="@drawable/selector_registe_setup_two_text_color"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="获取验证码"
            android:textColor="@color/secondary_text_color"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:text="设置登录密码"
            android:textColor="@color/secondary_text_color"
            android:textSize="10sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llSetupOneContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/common_module_space"
            android:background="@drawable/shape_text_bound_radius_5dp_gray"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="20dip"
                android:layout_height="30dip"
                android:src="@mipmap/icon_phone_number_gray"/>

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入注册手机号"
                android:inputType="number"
                android:maxLength="11"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/common_text_color"
                android:textColorHint="@color/secondary_text_color"
                android:textCursorDrawable="@null"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/ivClearPhone"
                android:layout_width="20dip"
                android:layout_height="30dip"
                android:src="@mipmap/icon_delete_edittext"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/common_module_space"
            android:background="@drawable/shape_text_bound_radius_5dp_gray"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="20dip"
                android:layout_height="30dip"
                android:src="@mipmap/icon_sms_code_gary"/>

            <EditText
                android:id="@+id/etSmsCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/common_text_color"
                android:textColorHint="@color/secondary_text_color"
                android:textCursorDrawable="@null"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvGetSmsCode"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_text_bound_radius_5dp_deepblue"
                android:gravity="center"
                android:singleLine="true"
                android:text="获取验证码"
                android:textColor="@color/deepblue"
                android:textSize="@dimen/common_text_size"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSetupTwoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/common_module_space"
            android:background="@drawable/shape_text_bound_radius_5dp_gray"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="20dip"
                android:layout_height="30dip"
                android:src="@mipmap/icon_password_gary"/>

            <EditText
                android:id="@+id/etSetPassWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="设置密码"
                android:digits="_0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                android:maxLength="18"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/common_text_color"
                android:textColorHint="@color/secondary_text_color"
                android:textCursorDrawable="@null"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/ivShowSetPassWord"
                android:layout_width="20dip"
                android:layout_height="30dip"
                android:src="@mipmap/icon_hint_password_gary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/common_module_space"
            android:background="@drawable/shape_text_bound_radius_5dp_gray"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="20dip"
                android:layout_height="30dip"
                android:src="@mipmap/icon_password_gary"/>

            <EditText
                android:id="@+id/etConfirmPassWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="确认密码"
                android:maxLength="18"
                android:padding="5dp"
                android:digits="_0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                android:singleLine="true"
                android:textColor="@color/common_text_color"
                android:textColorHint="@color/secondary_text_color"
                android:textCursorDrawable="@null"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/ivShowConfirmPassWord"
                android:layout_width="20dip"
                android:layout_height="30dip"
                android:src="@mipmap/icon_hint_password_gary"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbUserRule"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/selector_checkbox_user_rule_bg"
            android:button="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="我已经阅读并同意"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/secondary_text_size"/>

        <TextView
            android:id="@+id/tvUserRule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="《一线招聘用户协议》"
            android:textColor="@color/deepblue"
            android:textSize="@dimen/secondary_text_size"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnNextSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_radius_5dp_deepblue_bg"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size"/>

    <Button
        android:id="@+id/btnConfirmLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_radius_5dp_deepblue_bg"
        android:text="确认登录"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size"
        android:visibility="gone"/>
</LinearLayout>