<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="horizontal"
              android:paddingBottom="10dp"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:paddingTop="10dp">

    <CheckBox
        android:id="@+id/cbIsHired"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_checkbox_user_rule_bg"
        android:button="@null"
        android:clickable="false"
        android:enabled="false"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_jiantou"
            android:visibility="visible"/>

        <com.sookcs.zhaopin.view.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/civHeadPic"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_default_man"
            app:border_color="@color/white"
            app:border_width="1dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@id/ivArrow"
            android:layout_toRightOf="@id/civHeadPic"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvIsHired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:text="已录用"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/secondary_text_size"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="李建国"
                    android:textColor="@color/common_text_color"
                    android:textSize="@dimen/common_text_size"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tvName"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:singleLine="true"
                        android:text="诚信分:"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="@dimen/secondary_text_size"/>

                    <TextView
                        android:id="@+id/tvCreditScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="80"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="@dimen/secondary_text_size"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="投递岗位:"
                    android:textColor="@color/common_text_color"
                    android:textSize="@dimen/secondary_text_size"/>

                <TextView
                    android:id="@+id/tvDeliverJobName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="水电工"
                    android:textColor="@color/common_text_color"
                    android:textSize="@dimen/secondary_text_size"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="投递时间:"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/secondary_text_size"/>

                <TextView
                    android:id="@+id/tvDeliverTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="今天 9:40"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/secondary_text_size"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>