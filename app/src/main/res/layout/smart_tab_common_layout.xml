<com.sookcs.loadingandpullrefreshandtab.SmartTab.SmartTabLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewpagertab"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#FFFFFF"
    app:stl_defaultTabBackground="@color/transparent"
    app:stl_defaultTabTextColor="@drawable/selector_textcolor_deepblue_gray"
    app:stl_defaultTabTextHorizontalPadding="5dp"
    app:stl_defaultTabTextSize="@dimen/common_text_size"
    app:stl_distributeEvenly="true"
    app:stl_dividerColor="@color/transparent"
    app:stl_dividerThickness="1dp"
    app:stl_indicatorColor="@color/deepblue"
    app:stl_indicatorCornerRadius="0dp"
    app:stl_indicatorGravity="bottom"
    app:stl_indicatorInterpolation="smart"
    app:stl_indicatorThickness="3dp"
    app:stl_overlineColor="@color/deepblue"
    app:stl_underlineColor="#00000000"
    />


