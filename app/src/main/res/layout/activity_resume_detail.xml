<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_gray"
              android:orientation="vertical">

    <include layout="@layout/common_title_layout"/>

    <!--ProgressActivity用于状态页的控制 比如加载中  网络异常  无数据  适合任何页面-->
    <com.sookcs.loadingandpullrefreshandtab.viewtype.ProgressActivity
        xmlns:progressActivity="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.sookcs.zhaopin.view.MyScrollView
                android:id="@+id/myScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <com.allen.library.SuperTextView
                            xmlns:stv="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            stv:sDividerLineColor="@color/gray_999999"
                            stv:sLeftTextColor="@color/common_text_color"
                            stv:sLeftTextSize="@dimen/common_text_size"
                            stv:sLeftTextString="个人信息"
                            stv:sUseRipple="false"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="25dp"
                            android:paddingRight="15dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="姓名:"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/common_more_text_size"/>

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:singleLine="true"
                                android:text="张三"
                                android:textColor="@color/common_text_color"
                                android:textSize="@dimen/common_text_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="25dp"
                            android:paddingRight="15dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="年龄:"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/common_text_size"/>

                            <TextView
                                android:id="@+id/tvAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:singleLine="true"
                                android:text="18岁"
                                android:textColor="@color/common_text_color"
                                android:textSize="@dimen/common_text_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="25dp"
                            android:paddingRight="15dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="身高:"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/common_text_size"/>

                            <TextView
                                android:id="@+id/tvHeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:singleLine="true"
                                android:text="175cm"
                                android:textColor="@color/common_text_color"
                                android:textSize="@dimen/common_text_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="25dp"
                            android:paddingRight="15dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="性别:"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/common_text_size"/>

                            <TextView
                                android:id="@+id/tvSex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:singleLine="true"
                                android:text="男"
                                android:textColor="@color/common_text_color"
                                android:textSize="@dimen/common_text_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="25dp"
                            android:paddingRight="15dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="电话:"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/common_text_size"/>

                            <TextView
                                android:id="@+id/tvPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:singleLine="true"
                                android:text="135********"
                                android:textColor="@color/common_text_color"
                                android:textSize="@dimen/common_text_size"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray_999999"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:paddingLeft="25dp"
                            android:paddingRight="15dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="求职地点:"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/common_text_size"/>

                            <TextView
                                android:id="@+id/tvWantAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:text="江岸区"
                                android:textColor="@color/common_text_color"
                                android:textSize="@dimen/common_text_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:paddingLeft="25dp"
                            android:paddingRight="15dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="求职工种:"
                                android:textColor="@color/secondary_text_color"
                                android:textSize="@dimen/common_text_size"/>

                            <com.zhy.view.flowlayout.TagFlowLayout
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/flowWantJobType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:visibility="visible"
                                app:auto_select_effect="true"
                                app:max_select="-1"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_module_space"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <com.allen.library.SuperTextView
                            xmlns:stv="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            stv:sDividerLineColor="@color/gray_999999"
                            stv:sLeftTextColor="@color/common_text_color"
                            stv:sLeftTextSize="@dimen/common_text_size"
                            stv:sLeftTextString="职业技能"
                            stv:sUseRipple="false"
                            />

                        <com.zhy.view.flowlayout.TagFlowLayout
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/flowJobSkill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:visibility="visible"
                            app:auto_select_effect="true"
                            app:max_select="-1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_module_space"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <com.allen.library.SuperTextView
                            xmlns:stv="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            stv:sDividerLineColor="@color/gray_999999"
                            stv:sLeftTextColor="@color/common_text_color"
                            stv:sLeftTextSize="@dimen/common_text_size"
                            stv:sLeftTextString="其他技能"
                            stv:sUseRipple="false"
                            />

                        <TextView
                            android:id="@+id/tvOtherSkill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:text="无"
                            android:textColor="@color/common_text_color"
                            android:textSize="@dimen/common_text_size"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_module_space"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <com.allen.library.SuperTextView
                            xmlns:stv="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            stv:sDividerLineColor="@color/gray_999999"
                            stv:sLeftTextColor="@color/common_text_color"
                            stv:sLeftTextSize="@dimen/common_text_size"
                            stv:sLeftTextString="工作经历"
                            stv:sUseRipple="false"
                            />

                        <TextView
                            android:id="@+id/tvJobExperience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:text="张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三"
                            android:textColor="@color/common_text_color"
                            android:textSize="@dimen/common_text_size"/>
                    </LinearLayout>
                </LinearLayout>
            </com.sookcs.zhaopin.view.MyScrollView>

            <LinearLayout
                android:id="@+id/llBottomContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/llAgreenOrRefuseHireContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btnRefuseHire"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_text_bound_radius_5dp_deepblue"
                        android:text="拒绝录用"
                        android:textColor="@color/deepblue"
                        android:textSize="@dimen/common_text_size"/>

                    <Button
                        android:id="@+id/btnAgreenHire"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_radius_5dp_orange_bg"
                        android:text="确认录用"
                        android:textColor="@color/black"
                        android:textSize="@dimen/common_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAgreenOrRefuseEntryContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btnRefuseEntry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_text_bound_radius_5dp_deepblue"
                        android:text="未到岗"
                        android:textColor="@color/deepblue"
                        android:textSize="@dimen/common_text_size"
                        android:visibility="visible"/>

                    <Button
                        android:id="@+id/btnConfirmEntry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_radius_5dp_yellow_bg"
                        android:text="确认入职"
                        android:textColor="@color/black"
                        android:textSize="@dimen/common_text_size"
                        android:visibility="visible"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnResumeStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_radius_5dp_deepblue_bg"
                    android:text="已被企业录用"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_text_size"
                    android:visibility="gone"/>

            </LinearLayout>
        </LinearLayout>
    </com.sookcs.loadingandpullrefreshandtab.viewtype.ProgressActivity>
</LinearLayout>