<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/common_title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="我的余额(元)"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/common_text_size"/>

        <TextView
            android:id="@+id/tvMyBanlance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/weight_text_color"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tvBanlanceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_text_bound_radius_30dp_deepblue"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="交易明细"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/common_text_size"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnBuyMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_radius_5dp_yellow_bg"
        android:text="充值"
        android:textColor="@color/black"
        android:textSize="@dimen/common_text_size"/>
</LinearLayout>