<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_radius_5dp_half_gray_bg"
              android:orientation="vertical"
              android:paddingBottom="20dp"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:paddingTop="20dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="充"
            android:textColor="@color/weight_text_color"
            android:textSize="@dimen/common_more_text_size"/>

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="100"
            android:textColor="@color/weight_text_color"
            android:textSize="@dimen/common_more_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="元"
            android:textColor="@color/weight_text_color"
            android:textSize="@dimen/common_more_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="送"
            android:textColor="@color/red_price"
            android:textSize="@dimen/common_text_size"/>

        <TextView
            android:id="@+id/tvGiveMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="50"
            android:textColor="@color/red_price"
            android:textSize="@dimen/common_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="元"
            android:textColor="@color/red_price"
            android:textSize="@dimen/common_text_size"/>
    </LinearLayout>

</LinearLayout>